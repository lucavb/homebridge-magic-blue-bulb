{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2018"],
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2018"
    },
    "include": ["src/**/*"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "exclude": ["node_modules", "dist", "rollup.config.ts"]
}
